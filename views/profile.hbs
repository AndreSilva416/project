<h1>Profile</h1>

<div class="profile-container">

  <div class="bio-container">
    <h3>Name: {{user.username}}</h3>
  </div>

  <img class="profile-pic" src="{{user.profilePic}}" alt="">

</div>

<button><a href="/profile/edit">EDIT PROFILE</a></button>

<h1>List of your Event</h1>

 {{#each events}}
  
      <div>{{this.title}}</div>
      <div>{{this.description}}</div>
      <div>{{this.date}}</div>
      <div>{{this.location}}</div>
      <div>{{this.category}}</div>
      <div>{{this.ageRestriction}}</div>
        <a href="/event/{{this._id}}/edit"><button>Edit</button></a>
      <a href="/event/{{this._id}}/delete"><button>Delete</button></a>

 {{/each}}