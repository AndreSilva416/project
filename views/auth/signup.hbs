<h1>Sign Up</h1>
<form action="/signup" method="POST">
  <label>Name</label>
  <input name="fullName" type="text"  placeholder="Enter your name"  >

  <label>Username</label>
  <input name="username" type="text"  placeholder="Enter your username"  >

  <label>Email</label>
  <input name="email" type="email"  placeholder="Enter your email"  >

  <label>Password</label>
  <input name="password" type="password"  placeholder="Enter your Password"  >

  <label>Address</label>
  <input name="address" type="text"  placeholder="Enter your address"  >

  <label>Birthday</label>
  <input name="birthday" type="date"  placeholder="Enter your birthday"  >
  
  <button type="submit" >Sign Up</button>
</form>

{{!-- Conditionally render the msg --}}
{{#if msg}}
 <div class="error">{{msg}}</div>
{{/if}}