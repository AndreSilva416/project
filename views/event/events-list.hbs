<h1>List of Event</h1>

<input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for names.." title="Type in a name">

 {{#each events}}
  
      <div>{{this.title}}</div>
      <div>{{this.description}}</div>
      <div>{{this.date}}</div>
      <div>{{this.location}}</div>
      <div>{{this.category}}</div>
      <div>{{this.ageRestriction}}</div>
    {{#if this.showButtons}}
      <a href="/event/{{this._id}}/edit"><button>Edit</button></a>
      <a href="/event/{{this._id}}/delete"><button>Delete</button></a>
    {{/if}}
 {{/each}}
    

